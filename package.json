{
  "name": "codeck",
  "version": "0.1.0",
  "description": "Docker sandbox for working with Claude CLI",
  "type": "module",
  "main": "dist/index.js",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build:frontend": "npm run build -w @codeck/web",
    "build:backend": "tsc && npm run copy:templates",
    "copy:templates": "node -e \"const {cpSync}=require('fs');cpSync('src/templates','dist/templates',{recursive:true})\"",
    "build": "npm run build:frontend && npm run build:backend",
    "start": "node dist/index.js",
    "start:web": "node dist/index.js --web",
    "dev": "tsx watch src/index.ts",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "docker:build-base": "docker build -t codeck-base -f Dockerfile.base .",
    "docker:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "build:cli": "cd cli && npm run build"
  },
  "dependencies": {
    "express": "^4.21.1",
    "helmet": "^8.1.0",
    "multicast-dns": "^7.2.5",
    "node-cron": "^3.0.3",
    "node-pty": "^1.0.0",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.0",
    "@types/multicast-dns": "^7.2.4",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "supertest": "^7.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^5.4.0",
    "vitest": "^4.0.18"
  },
  "optionalDependencies": {
    "@xenova/transformers": "^2.17.0",
    "better-sqlite3": "^12.0.0",
    "sqlite-vec": "^0.1.0"
  },
  "engines": {
    "node": ">=20"
  }
}
