{
  "name": "@codeck/runtime",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy:templates",
    "copy:templates": "node -e \"const {cpSync,rmSync,existsSync}=require('fs');if(existsSync('dist/templates'))rmSync('dist/templates',{recursive:true,force:true});cpSync('src/templates','dist/templates',{recursive:true})\"",
    "clean": "rm -rf dist",
    "dev": "tsx watch src/index.ts"
  },
  "dependencies": {
    "express": "^4.21.1",
    "helmet": "^8.1.0",
    "multicast-dns": "^7.2.5",
    "node-cron": "^3.0.3",
    "node-pty": "^1.0.0",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.0",
    "@types/multicast-dns": "^7.2.4",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.5.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "optionalDependencies": {
    "@xenova/transformers": "^2.17.0",
    "better-sqlite3": "^12.0.0",
    "sqlite-vec": "^0.1.0"
  }
}
